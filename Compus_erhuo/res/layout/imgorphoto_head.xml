<?xml version="1.0" encoding="UTF-8"?>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        >


        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"  
            android:gravity="center_horizontal"
             >
        
       <LinearLayout
        	android:id="@+id/exit_layout2"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_horizontal"
        	android:layout_gravity="bottom"
        	android:orientation="vertical"
        	android:background="@drawable/exit_dialog_bg" >

            
            <Button
                android:id="@+id/photo_Btn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_style_alert_dialog_button"
                android:gravity="center"
                android:onClick="sendMessage"
                android:text="拍照"
                android:textColor="#03182c"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/picture_Btn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_style_alert_dialog_button"
                android:gravity="center"
                android:onClick="call"
                android:text="从相册选择"
                android:textColor="#03182c"
                android:textSize="18sp" />
            <Button
                android:id="@+id/exitBtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_style_alert_dialog_button_pressed"
                android:gravity="center"
                android:onClick="quxiao"
                android:text="取消"
                android:textColor="@color/window_bg"
                android:textSize="18sp" />
            

             </LinearLayout>

    </LinearLayout>
</RelativeLayout>
