<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="fill_parent">
		<TextView android:text="IP:" android:id="@+id/textView1"
			android:layout_width="80px" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/ip_editText" android:layout_width="wrap_content"
			android:text="192.168.1.13" android:inputType="number">
			<requestFocus></requestFocus>
		</EditText>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout2" android:layout_width="fill_parent">
		<TextView android:text="PORT1:" android:id="@+id/textView2"
			android:layout_width="80px" android:layout_height="wrap_content"></TextView>
		<EditText android:text="8211" android:layout_weight="1"
			android:layout_height="wrap_content" android:id="@+id/port1_editText"
			android:inputType="number" android:layout_width="wrap_content"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout3" android:layout_width="fill_parent">
		<TextView android:text="PORT2:" android:id="@+id/textView3"
			android:layout_width="80px" android:layout_height="wrap_content"></TextView>
		<EditText android:text="8212" android:layout_weight="1"
			android:layout_height="wrap_content" android:id="@+id/port2_editText"
			android:inputType="number" android:layout_width="wrap_content"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout4" android:layout_width="fill_parent">
		<TextView android:text="PORT3:" android:id="@+id/textView4"
			android:layout_width="80px" android:layout_height="wrap_content"></TextView>
		<EditText android:text="8213" android:inputType="number"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:id="@+id/port3_editText" android:layout_width="wrap_content"></EditText>
	</LinearLayout>

</LinearLayout>
